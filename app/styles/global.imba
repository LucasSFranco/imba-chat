import './themes/dark'
import './themes/light'

global css html
	font-family: 'Nunito', sans-serif

	*
		border: 0
		margin: 0
		outline: 0
		padding: 0

		box-sizing: border-box

	h1, h2, h3, h4, h5, h6
		font-weight: inherit

	h1
		font-size: 2.625rem
	h2
		font-size: 2.25rem
	h3
		font-size: 1.75rem
	h4
		font-size: 1.5rem
	h5
		font-size: 1.25rem
	h6
		font-size: 1.125rem
